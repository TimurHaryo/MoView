<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/space_16">

    <View
        android:id="@+id/v_shimmer_home_section"
        android:layout_width="@dimen/space_96"
        android:layout_height="@dimen/space_18"
        android:layout_marginStart="@dimen/space_16"
        android:background="@drawable/bg_shimmer_radius_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_shimmer_home_more"
        android:layout_width="@dimen/space_64"
        android:layout_height="@dimen/space_18"
        android:layout_marginEnd="@dimen/space_16"
        android:background="@drawable/bg_shimmer_radius_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/space_0"
        android:layout_height="@dimen/space_160"
        android:layout_marginHorizontal="@dimen/space_16"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/bg_shimmer_radius_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_shimmer_home_section" />

</androidx.constraintlayout.widget.ConstraintLayout>