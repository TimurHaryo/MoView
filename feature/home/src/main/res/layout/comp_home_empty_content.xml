<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_parent_home_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/space_8"
        app:cardElevation="@dimen/space_0"
        app:strokeColor="?themeColorBackgroundVariant"
        app:strokeWidth="@dimen/space_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/space_24"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_128"
                android:src="@drawable/img_empty"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/Theme.MoView.Text.Secondary.BodyXSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_24"
                android:text="@string/text_error_empty_data" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>