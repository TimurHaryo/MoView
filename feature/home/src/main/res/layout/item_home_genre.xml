<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_home_parent_genre"
        android:layout_width="@dimen/space_88"
        android:layout_height="@dimen/space_88"
        android:background="?selectableItemBackground"
        app:cardBackgroundColor="?themeColorBackgroundVariant"
        app:cardCornerRadius="@dimen/space_12"
        app:cardElevation="@dimen/space_0"
        tools:ignore="ContentDescription, UseCompoundDrawables">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_genre_icon"
                android:layout_width="@dimen/space_28"
                android:layout_height="@dimen/space_28"
                android:layout_marginBottom="@dimen/space_8"
                app:tint="?themeColorTextPrimary"
                tools:src="@drawable/ic_home" />

            <TextView
                android:id="@+id/tv_home_genre_title"
                style="@style/Theme.MoView.Text.PrimaryVariant.BodyXSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Romance" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>